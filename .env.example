# ============================================================================
# ScrapeJET Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# Run: cp .env.example .env

# ============================================================================
# üîë REQUIRED - Redis Configuration (Docker Compose)
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=  # Uncomment and set if Redis requires authentication

# ============================================================================
# ü§ñ REQUIRED - OpenAI Configuration (for RAG/LLM features)
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================================================
# ‚òÅÔ∏è OPTIONAL - AWS Bedrock Configuration (Alternative to OpenAI)
# ============================================================================
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=us-east-1

# ============================================================================
# üï∑Ô∏è Scraping Configuration
# ============================================================================
# Maximum number of pages to scrape per job
MAX_PAGES=100
MAX_WORKERS=5
REQUEST_TIMEOUT=30
RETRY_COUNT=3
REQUEST_DELAY=1.0

# Advanced Scraping Features
USE_SELENIUM=true
USE_PLAYWRIGHT=true
SCROLL_PAGES=true
SCREENSHOT_PAGES=false
WAIT_FOR_JS=5

# OpenAI Configuration
OPENAI_API_KEY=key

# AWS Bedrock Configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_OPENAI_MODEL=gpt-3.5-turbo
DEFAULT_BEDROCK_MODEL=anthropic.claude-v2

# Logging
LOG_LEVEL=INFO 